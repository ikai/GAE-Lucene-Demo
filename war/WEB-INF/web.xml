<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Lucene_Demo</servlet-name>
		<servlet-class>lucenedemo.Lucene_DemoServlet</servlet-class>
	</servlet>

  <servlet>
    <servlet-name>BuildIndex</servlet-name>
    <servlet-class>lucenedemo.BuildIndexServlet</servlet-class>
  </servlet>

  
	<servlet-mapping>
		<servlet-name>Lucene_Demo</servlet-name>
		<url-pattern>/lucene_demo</url-pattern>
	</servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>BuildIndex</servlet-name>
    <url-pattern>/index/build</url-pattern>
  </servlet-mapping>

  
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
